<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_tab"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/transparent_background"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_marginTop="2.5dp"
                android:src="@mipmap/home_unselect" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:textColor="@color/Color_Word45"
                android:textSize="@dimen/layout_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/iv_add1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_test"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_marginTop="2.5dp"
                android:src="@mipmap/mine_unselect" />

            <TextView
                android:id="@+id/vt_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_text"
                android:textColor="@color/Color_Word45"
                android:textSize="@dimen/layout_text"
                tools:ignore="DuplicateIds" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_marginTop="0dp"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/add" />
    </LinearLayout>
</FrameLayout>


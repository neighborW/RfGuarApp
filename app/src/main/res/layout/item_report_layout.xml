<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_report_bg"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="14dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_test_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_test_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="2021-03-23 16:34:39"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/Color_Word85"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="@dimen/text_in_item"
                    />
                <TextView
                    android:id="@+id/tv_test_status"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="@dimen/text_in_item"
                    android:textColor="#E60012" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="Company"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/Color_Word45"
                    android:textSize="@dimen/text_in_item"
                    />
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Peru Company"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="@dimen/text_in_item"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Email Address"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/Color_Word45"
                    android:textSize="@dimen/text_in_item"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="12345678@gmail.com"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="@dimen/text_in_item"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="1.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Mobile Phone"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/Color_Word45"
                    android:textSize="@dimen/text_in_item"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_mobile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="13512345678"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="@dimen/text_in_item"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="1.5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Project Name"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/Color_Word45"
                    android:textSize="@dimen/text_in_item"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Rifeng Hall"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="@dimen/text_in_item"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Testing Method"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/Color_Word45"
                    android:textSize="@dimen/text_in_item"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_testing_method"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Hydrostatic"
                    android:textSize="@dimen/text_in_item"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="1.5dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="72dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:id="@+id/draft_button_bg_layout"
                >
                <Button
                    android:id="@+id/btn_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_line"
                    android:text="Email"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Color_Main"
                    android:textSize="@dimen/text_in_item"
                    android:textAllCaps="false"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent">
                </View>
                <Button
                    android:id="@+id/btn_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_big_login_btn"
                    android:text="Report"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_in_item"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/im_finish"
            android:layout_width="75dp"
            android:layout_height="59dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="85dp"
            android:src="@mipmap/not_pass" />
    </FrameLayout>
</LinearLayout>
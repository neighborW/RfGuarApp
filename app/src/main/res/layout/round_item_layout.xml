<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <View
                android:id="@+id/round_top_line_view"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:background="@color/Color_Border"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/round_icon_imageview"
                android:layout_weight="0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/over_test" />

            <View
                android:id="@+id/round_bottom_line_view"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:background="@color/Color_Border"
                android:layout_height="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/round_textview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/Color_Word65"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/round_Detail_line_view"
                android:layout_width="1dp"
                android:background="@color/Color_Border"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/round_Detail_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Color_Word65"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView" />



    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ArgreeDetailActivity"
    android:background="#F6F8FA"
    >
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>
    <ScrollView
        android:layout_above="@+id/ll_agreet"
        android:layout_below="@+id/title_bar"
        android:layout_marginTop="@dimen/margin_top_bottum"
        android:paddingBottom="15dp"
        android:layout_marginLeft="@dimen/size_12dp_level"
        android:layout_marginRight="@dimen/size_12dp_level"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_agreet_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Color_Word85"
                android:padding="4dp"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_agreet"
        android:background="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:visibility="visible"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/btn_agreet"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_marginRight="@dimen/margin_left_and_right"
            android:layout_width="match_parent"
            android:text="@string/Agree"
            android:textAllCaps="false"
            android:background="@drawable/shape_big_login_btn"
            android:layout_height="@dimen/dimen_44dp"
            />
    </LinearLayout>
</RelativeLayout>
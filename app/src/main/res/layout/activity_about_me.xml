<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F8FAFF"
    tools:context=".activity.AboutMeActivity">

    <!-- 顶部导航条   -->
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_weight="0"
        android:gravity="center_vertical"
        >
        <include layout="@layout/layout_toolbar"></include>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp">
    </View>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_aboutme_bg"
            android:layout_marginTop="45dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal"
                >
                <com.rifeng.p2p.view.MyEditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="45dp"
                    android:gravity="center_vertical"
                    android:hint="Last Name"
                    android:text="Rancy"
                    android:enabled="false"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textColorHint="@color/Color_Word25"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/Color_Word85"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <com.rifeng.p2p.view.MyEditText

                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:hint="First Name"
                    android:text="Wang"
                    android:enabled="false"
                    android:textColor="@color/tv_black"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <EditText

                    android:id="@+id/et_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Company"
                    android:text="Peru Company"
                    android:enabled="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.rifeng.p2p.view.MyEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Address"
                    android:text="Address"
                    android:enabled="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.rifeng.p2p.view.MyEditText
                    android:id="@+id/et_area"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Area"
                    android:text="Area"
                    android:enabled="false"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    />
                <ImageView
                    android:layout_weight="0"
                    android:id="@+id/im_area_address"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/shrink"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.rifeng.p2p.view.MyEditText
                    android:id="@+id/et_post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Post Code"
                    android:text="Post Code"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:enabled="false"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.rifeng.p2p.view.MyEditText
                    android:id="@+id/et_mobile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Mobile Phone"
                    android:text="Mobile Phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"

                    android:ellipsize="middle"
                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.rifeng.p2p.view.MyEditText
                    android:id="@+id/et_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="E-Mail"
                    android:text="E-Mail"
                    android:enabled="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textColorHint="@color/tv_gray"
                    android:singleLine="true"
                    android:ellipsize="middle"

                    />
            </LinearLayout>
            <View
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="2dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="26.5dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="30dp"
                >
                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_line"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/Color_Main"
                    android:textSize="16sp"

                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_90dp"
            android:src="@mipmap/about_me" />
    </FrameLayout>
</LinearLayout>
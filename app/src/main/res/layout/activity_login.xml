<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical"
    android:outlineSpotShadowColor="#F0F0F0"
    tools:context=".activity.LoginActivity">
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="66.5dp">
    </View>
    <ImageView
        android:layout_width="87.5dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@mipmap/login_logo"
        android:color="#fff0f0f0"
        >
    </ImageView>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_login_form"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_account"
            android:background="@null"
            android:hint="Email"
            android:textColor="#000000"
            android:textColorHint="#bcbcbc"
            android:textSize="14dp"
            android:layout_height="22.5dp"
            android:layout_width="135dp"
            android:layout_weight="1"
             />
        <ImageView
            android:layout_width="12.5dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@mipmap/email" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_login_form"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_password"
            android:background="@null"
            android:hint="Password"
            android:textColor="#000000"
            android:textColorHint="#bcbcbc"
            android:textSize="14dp"
            android:layout_height="22.5dp"
            android:layout_width="135dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="12.5dp"
            android:layout_height="12dp"
            android:src="@mipmap/Password" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_form">
            <EditText
                android:id="@+id/et_verficate"
                android:layout_width="200dp"
                android:layout_height="22.5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Verification Code"
                android:textColor="#000000"
                android:textColorHint="#bcbcbc"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_login_form"
            >
            <ImageView
                android:id="@+id/im_certification"
                android:background="@drawable/shape_login_form"
                android:layout_width="84dp"
                android:layout_height="22.5dp"
                android:src="@mipmap/Password"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26dp"

        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:text="LOGIN"
            android:textColor="#FCF8F8"
            android:layout_weight="1"
            android:layout_marginRight="26.5dp"
            android:background="@drawable/shape_big_login_btn"
            >
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="30dp"
            android:text="Forgot Password? "
            android:textColor="#0081CC"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="230dp"
        >
        <Button
            android:id="@+id/btn_siginUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26.5dp"
            android:background="@drawable/shape_btn_line"
            android:text="SIGN UP"
            android:textColor="#0F3DC5"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
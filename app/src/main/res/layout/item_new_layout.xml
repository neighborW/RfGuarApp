<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFF"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="21dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="36dp"
                android:layout_height="16dp"
                android:src="@mipmap/top"
                android:visibility="gone"
                android:layout_marginRight="6dp"
                />
            <ImageView
                android:id="@+id/im_new"
                android:layout_width="23dp"
                android:layout_height="17dp"
                android:src="@mipmap/new_notify"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bfdn sfg nsghh dg d "
                android:textSize="16sp"
                android:textColor="@color/Color_Word85"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginLeft="@dimen/size_12dp_level"
            android:layout_marginBottom="@dimen/margin_top_bottum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/time"
                />
            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/tv_send_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2020-07-27"
                android:textColor="#999"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/im_onclick"
        android:gravity="right"
        android:layout_marginRight="12dp"
        android:layout_weight="0"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@mipmap/jump"
        />
</LinearLayout>